{
  "name": "xBio Sentinel - ESP32-S3 N16R8",
  "version": "1.0.0",
  "description": "xBio Sentinel IoT firmware for environmental monitoring with BME688",
  "author": "MRF103 ARC Team",
  "license": "MIT",
  "hardware": {
    "board": "ESP32-S3-WROOM-1 N16R8",
    "flash": "16MB",
    "psram": "8MB",
    "sensor": "BME688 (Bosch)",
    "interface": "I2C"
  },
  "pins": {
    "I2C_SDA": 8,
    "I2C_SCL": 9,
    "LED_STATUS": 2,
    "LED_ERROR": 4,
    "BUTTON_CONFIG": 0,
    "BUTTON_RESET": 3
  },
  "bme688": {
    "address": "0x77",
    "alternate_address": "0x76",
    "measurements": ["temperature", "humidity", "pressure", "gas_resistance", "iaq"],
    "sample_rate_ms": 1000
  },
  "connectivity": {
    "wifi": true,
    "ble": true,
    "mqtt": true,
    "websocket": true
  },
  "features": [
    "Real-time environmental monitoring",
    "Indoor Air Quality (IAQ) calculation",
    "BLE provisioning and local control",
    "MQTT for cloud connectivity",
    "WebSocket for live dashboard",
    "OTA firmware updates",
    "Deep sleep power management",
    "Configurable alerts and thresholds"
  ],
  "build": {
    "framework": "Arduino",
    "platformio": true,
    "partition_scheme": "default_16MB"
  }
}
