{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "./dist/server",
    "rootDir": ".",
    "noEmit": false,
    "jsx": "preserve"
  },
  "include": [
    "server/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "client",
    "dist",
    "**/*.test.ts"
  ]
}
