{
  "name": "@mrf103/xbook-engine",
  "version": "1.0.0",
  "description": "AI-Powered Content Generation & Book Publishing Engine",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks/index.js",
      "types": "./dist/hooks/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "content-generation",
    "book-publishing",
    "gpt-4",
    "openai",
    "anthropic",
    "story-generation",
    "ebook",
    "pdf-generation"
  ],
  "author": "MRF103 Holdings <dev@mrf103.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/firas103103-oss/xbook-engine.git"
  },
  "bugs": {
    "url": "https://github.com/firas103103-oss/xbook-engine/issues"
  },
  "homepage": "https://xbook.mrf103.com",
  "dependencies": {
    "openai": "^4.50.0",
    "@anthropic-ai/sdk": "^0.25.0",
    "zod": "^3.23.8",
    "pdf-lib": "^1.17.1",
    "epub-gen-memory": "^1.0.10"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "tsup": "^8.1.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
