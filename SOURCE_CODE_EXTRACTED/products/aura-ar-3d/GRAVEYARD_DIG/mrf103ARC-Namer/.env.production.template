# ðŸŒŸ Stellar Command OS - Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# Application
NODE_ENV=production
PORT=5001
APP_URL=https://app.mrf103.com

# Database (PostgreSQL)
DATABASE_HOST=your-postgres-host
DATABASE_PORT=5432
DATABASE_NAME=stellar_command
DATABASE_USER=postgres
DATABASE_PASSWORD=your-secure-password
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20
DATABASE_SSL=true

# Redis
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# JWT Authentication
JWT_ACCESS_SECRET=your-jwt-access-secret-min-32-chars
JWT_REFRESH_SECRET=your-jwt-refresh-secret-min-32-chars

# Session
SESSION_SECRET=your-session-secret-min-32-chars

# API Keys
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Monitoring & Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Email Service (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@stellar-command.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX_ATTEMPTS=10

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security
CORS_ORIGIN=https://app.mrf103.com
TRUST_PROXY=true

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_REDIS_CACHE=true
ENABLE_RATE_LIMITING=true
ENABLE_ANALYTICS=true

# Logging
LOG_LEVEL=info
LOG_MAX_FILES=10
LOG_MAX_SIZE=5242880

# Performance
MAX_WORKERS=4
REQUEST_TIMEOUT=30000
KEEPALIVE_TIMEOUT=65000

# Railway-specific (if deploying to Railway)
RAILWAY_STATIC_URL=https://your-project.railway.app
RAILWAY_GIT_COMMIT_SHA=$RAILWAY_GIT_COMMIT_SHA
