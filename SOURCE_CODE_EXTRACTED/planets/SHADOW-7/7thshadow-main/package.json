{
  "name": "x-book-smart-publisher",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "AI-powered manuscript enhancement and publishing platform using Gemini 3 Pro",
  "author": "MrF X OS Organization",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/firas103103-oss/x-book.git"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "tsx watch backend/server.ts",
    "build": "vite build && npm run build:backend",
    "build:backend": "tsc --project tsconfig.backend.json",
    "postbuild": "node ./scripts/generate-health.js",
    "preview": "vite preview",
    "start": "node dist/backend/server.js",
    "start:frontend": "serve -s dist -l ${PORT:-3000} --no-port-switching --no-clipboard",
    "postinstall": "if [ \"$NODE_ENV\" = \"production\" ]; then echo \"Skipping build during production install\"; else npm run build; fi",
    "railway:build": "npm install && npm run build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist node_modules package-lock.json",
    "deploy:check": "npm run build && npm run preview"
  },
  "dependencies": {
    "@google/genai": "^1.35.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@sentry/react": "^10.34.0",
    "@supabase/supabase-js": "^2.48.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "framer-motion": "^12.26.2",
    "jszip": "^3.10.1",
    "lucide-react": "^0.562.0",
    "mammoth": "^1.11.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hot-toast": "^2.6.0",
    "recharts": "^3.6.0",
    "serve": "^14.2.5",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.1.2",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "tsx": "^4.19.2",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^4.0.17"
  }
}
